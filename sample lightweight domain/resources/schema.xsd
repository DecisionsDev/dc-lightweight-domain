<xsd:schema targetNamespace="http://www.ibm.com/rules" xmlns="http://www.ibm.com/rules" xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="unqualified" attributeFormDefault="unqualified">
	<xsd:element name="order" type="order"/>
	<xsd:complexType name="order">
		<xsd:sequence>
			<xsd:element name="id" type="xsd:string"/>
			<xsd:element name="stock" type="xsd:string"/>
			<xsd:element name="amount" type="xsd:int"/>
			<xsd:element name="exchange" type="xsd:string"/>
			<xsd:element name="currency" type="xsd:string"/>
			<xsd:element name="city" type="xsd:string"/>
			<xsd:element name="country" type="xsd:string"/>
			<xsd:element name="sector" type="xsd:string"/>
			<xsd:element name="action">
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:enumeration value="Buy"/>
						<xsd:enumeration value="Sell"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="securityType">
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:enumeration value="Bonds"/>
						<xsd:enumeration value="Futures"/>
						<xsd:enumeration value="Stock"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="dateTime" type="xsd:dateTime"/>
			<xsd:element name="status">
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:enumeration value="Accepted"/>
						<xsd:enumeration value="Rejected"/>
						<xsd:enumeration value="Pending"/>
						<xsd:enumeration value="Blocked"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="reasons">
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:enumeration value="Customer Preferences"/>
						<xsd:enumeration value="Black Listed Stocks"/>
						<xsd:enumeration value="Bad Client"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
		</xsd:sequence>
	</xsd:complexType>
</xsd:schema>